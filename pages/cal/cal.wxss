/* pages/cal/cal.wxss */
.content {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #ccc;
    font-family: "Microsoft YaHei";
    overflow-x: hidden;
}

.layout-top {
    width: 100%;
}

.layout-bottom {
    width: 100%;
}

.screen {
    line-height: 260rpx;
    text-align: right;
    padding: 0 10rpx;
    font-size: 60px;
    font-weight: bold;
    box-sizing: border-box;
    border-top: 1px solid #fff;
}

.btnGroup {
    width: 100%;
    height: 5rem;
    display: flex; 
    flex-direction: row;
    background-color: #fff;
}

.item {
    width: 25%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1rpx solid #fff;
}

.orange {
    color: #fef4e9;
    background: #f78d1d;
    font-weight: bold;
}

.item:active {
    background-color: #ff0000;
}

.blue {
    color: #d9eef7;
    background: #0095cd;
    font-weight: bold;
}

.zero {
    width: 50%;
}













